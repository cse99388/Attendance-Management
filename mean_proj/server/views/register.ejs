                  <label style = "color:#900C3F"><i class="fa-solid fa-key"></i> Confirm Password : </label><br/>
                  <input ng-change="change()" ng-model="cpassword" type="password" id="cpassword" name="cpassword" ng-required="true" /><br/>
                  <span ng-show="form.cpassword.$touched && form.cpassword.$error.required">Password is required.</span><br/>

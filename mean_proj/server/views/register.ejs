              <form action="/register" method="post" name = "form" >
      
      
                  <label style = "color:#900C3F"><i class="fa-solid fa-user"></i> College ID: </label><br/>
                  <input type="text" id="userName" name="userName" ng-model = "userName"  ng-required="true" /><br/>
                  <span ng-show="form.userName.$touched && form.userName.$error.required">College ID is required.</span><br/>


                  <label style = "color:#900C3F"><i class="fa-solid fa-user"></i> Name: </label><br/>
